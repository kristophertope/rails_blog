<%= simple_form_for([@post, @post.comments.build]) do |f| %>
        <div class="field">
            <div class="control">
                <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
                <%# wrapper: false disables simple_form's class wrappers, which clash with Bulma %>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
            </div>
        </div>
        <%# simple_form button, class styles it via Bulma %>
        <%# Rails "knows" to put 'add' or 'edit' text dynamically %>
        <%= f.button :submit, class: "button is-primary" %>
<% end %>